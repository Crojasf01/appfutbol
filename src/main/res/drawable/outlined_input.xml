<!-- drawable/outlined_input.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo transparente -->
    <solid android:color="#00FFFFFF" /> <!-- Totalmente transparente -->
    <stroke android:width="2dp" android:color="#cccccc" /> <!-- Borde gris -->
    <corners android:radius="4dp" /> <!-- Esquinas redondeadas -->

    <!-- Borde del input -->
    <stroke
        android:width="10dp"
        android:color="#FFFFFF"/> <!-- Color blanco, puede cambiarse -->

    <!-- Esquinas redondeadas -->
    <corners android:radius="8dp"/>
</shape>
