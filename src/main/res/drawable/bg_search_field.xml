<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo gris claro -->
    <solid android:color="#333333" />

    <!-- Bordes redondeados -->
    <corners android:radius="12dp" />

    <!-- Padding opcional interno -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />

    <!-- Borde sutil -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />
</shape>
