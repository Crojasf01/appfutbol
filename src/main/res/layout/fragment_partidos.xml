<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111"
    android:padding="8dp">

    <!-- Imagen superior (cancha con pelota a lo ancho de la pantalla) -->

    <!-- Barra de búsqueda superpuesta sobre la imagen -->

    <!-- Título debajo de la imagen -->

    <ImageView
        android:id="@+id/headerImage"
        android:layout_width="247dp"
        android:layout_height="238dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="99dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="88dp"
        android:scaleType="centerCrop"
        android:src="@drawable/cancha" />

    <!-- Lista de partidos -->
    <TextView
        android:id="@+id/textEventos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerImage"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="8dp"
        android:text="Todos los eventos"
        android:textColor="#FFF"
        android:textSize="20sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPartidos"
        android:layout_width="403dp"
        android:layout_height="432dp"
        android:layout_below="@+id/headerImage"
        android:layout_marginTop="40dp"
        android:padding="4dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

</RelativeLayout>
